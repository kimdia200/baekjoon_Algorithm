import java.util.Scanner;

/**
 * 
 * 정수 5 입력받았을때     총 9줄  = input*2-1
 * 	      01234
       0  *
       1  **
       2  ***
       3  ****			별찍든가(i<=j)
       4  *****          ------------ i<5(별찍든가)  
       5   ****			------------ i>=5(공백입력 하든가, 별찍든가)
       6    ***			공백(i-num<=j),  별찍든가(i-num>j)
       7     **			
       
       8      *
 *
 *            
 */
public class Test {

	public static void main(String[] args) {
		
		Test t1 = new Test();
		t1.test();
	}
	
	public void test() {
		int num;
		Scanner sc = new Scanner(System.in);
		System.out.print("정수를 하나 입력하세요 : ");
		
		while(true) {
			num = sc.nextInt();
			if(num>0)break;
			System.out.print("다시 정수를 하나 입력하세요 : ");
		}
		
		for(int i=0; i<num*2-1; i++) {
			for(int j=0; j<num; j++) {
				//num번째 줄 이면서 i=j일 경우 까지 별표찍음
				if(i<num && j<=i) {
					System.out.print("*");
				}
				//num번째 줄 이후 이면서 공백 찍을경우 
				else if(i>=num && i-num>=j) {
					System.out.print(" ");
				}
				//num번째 줄 이후 이면서 별표 찍을경우
				else if(i>=num)
					System.out.print("*");
			}
			//한줄이 끝날때 마다 줄바꿈
			System.out.println();
		}
		
	}
}
