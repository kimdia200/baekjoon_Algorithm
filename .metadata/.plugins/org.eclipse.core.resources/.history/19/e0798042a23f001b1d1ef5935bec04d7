import java.util.Scanner;

/**
 * 첫번째 경우
 * 정수 하나 입력:5
 * 1
 * *2
 * **3
 * ***4
 * ****5


 * ===================
 * 두번째 경우
 * 정수 하나 입력: -5
 * 양수가 아닙니다
 * @author kimYS
 *
 */
public class Test {

	public static void main(String[] args) {
		int num;
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수 하나 입력 : ");
		while(true) {
			num=sc.nextInt();
			if(num>0)
				break;
			System.out.print("다시 입력하세요 : ");
		}
//				1. a=b 숫자출력
//				2. a>b *
//				3. a<b break;
		for(int i=0; i<num; i++) {
			for(int j=0; j<num; j++) {
				if(i==j)
					System.out.print(i+1);
				else if(i>j)
					System.out.print("*");
				else
					break;
			}
			System.out.println();
		}
	}

}
