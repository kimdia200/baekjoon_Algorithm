import java.util.Scanner;

/**
 * 
 * 정수 5입력받았을때
         *
         **
         ***
         ****
         *****
          ****
           ***
            **
             *
 *
 *            
 */
public class Test {

	public static void main(String[] args) {
		
		Test t1 = new Test();
		t1.test();
	}
	
	public void test() {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수를 하나 입력하세요 : ");
		int num= sc.nextInt();
		
		for(int i=0; i<num*2-1;i++) {
			for(int j=0; j<num; j++) {
				if(i<=j) {
					System.out.print("*");
				}
			}
		}
		
	}
}
