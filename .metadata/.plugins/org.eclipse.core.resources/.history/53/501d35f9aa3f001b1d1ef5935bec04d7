import java.util.Scanner;

/**
 * 
 * 정수 5입력받았을때
         *
         **
         ***
         ****
         *****
          ****
           ***
            **
             *
 *
 *            
 */
public class Test {

	public static void main(String[] args) {
		
		Test t1 = new Test();
		t1.test();
	}
	
	public void test() {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수를 하나 입력하세요 : ");
		int num= sc.nextInt();
		
		for(int i=0; i<num*2-1; i++) {
			for(int j=0; j<num; j++) {
				//num번째 줄 이면서 i=j일 경우 까지 별표찍음
				if(i<num && j<=i) {
					System.out.print("*");
				}
				//num번째 줄 이후 이면서 공백 찍을경우 
				else if(i>=num && i-num>=j) {
					System.out.print(" ");
				}
				//num번째 줄 이후 이면서 별표 찍을경우
				else if(i>=num)
					System.out.print("*");
			}
			System.out.println();
		}
		
	}
}
